<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"/>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

<%= javascript_tag "window._token = '#{form_authenticity_token}'" %>

<h1> WELCOME TO ACEBOOK </h1>
<div>
<% flash.each do |type, msg| %>
  <div class="alert alert-<%= type %>">
  <%= msg %>
  </div>
  <% end %>
</div>
<!-- Button trigger modal --->
<div class="container">
  <button class="btn btn=primary btn-lg" href="#signup" data-toggle="modal" data-target=".log-sign">Log in / Register</button>
</div>

<!---Modal---->
<!--button--->
  <div class="modal fade bs-modal-sm log-sign" id="myModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
   <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <!--tabs---->
      <div class="bs-example bs-example-tabs">
        <!--changed name of div and used js function to toggle-->
        <ul id="myTab" class="nav nav-tabs">
          <li id="tab1" class=" active tab-style login-shadow ">
            <a href="#signin" data-toggle="tab">Log In</a>
          </li>
          <li id="tab2" class=" tab-style ">
            <a href="#signup" data-toggle="tab">Sign Up</a>
          </li>
        </ul>
      </div>

      <!--Modal Content---->
      <div class="modal-body">
        <div id="myTabContent" class="tab-content">
          <!--Login form --->
          <div class="tab-pane fade active in" id="signin">
            <%= form_with model: @user, class: "form-horizontal" do |user| %>
            <fieldset>

              <!--Login form text --->
              <!-- Email input-->
              <div class="group">
                <%= user.email_field :email, class: 'input', :required => true %>
                <span class="highlight"></span>
                <span class="bar"></span>
                <%= user.label :email, 'Email address', class: 'label' %>
              </div>
              <!--password input--->
              <div class="group">
                <%= user.password_field :password, class: 'input', :required => true %>
                <span class="highlight"></span>
                <span class="bar"></span>
                <%= user.label :password, 'Password', class: 'label' %>
              </div>

              <%= user.label :remember_me, class: "checkbox inline" do %>
              <%= user.check_box :remember_me %>
              <span>Remember me</span>
              <% end %>

              <!---forgot link--->
              <div class="forgot-link">
                <a href="#forgot" data-toggle="modal" data-target="#forgot-password">I forgot my password</a>
              </div>

              <!--button login --->
              <div class="control-group">
                <label class="control-label" for="signin"></label>
                <div class="controls">
                  <%= user.submit "Log In", class: "btn btn-primary btn-block", id: "signin", name: "signin" %>
                </div>
              </div>

            </fieldset>
          <% end %>
        </div>

        <!--- Sign up form --->
        <div class="tab-pane fade" id="signup">
         <div class="form-horizontal">
          <fieldset>
          <!-- add falsh message-->
          
            <!-- text input signup-->
            <%# <div class="group">
            <input type="file" name="avatar" id="avatarInput" class="input" />
            <label for="avatar" class="label">Upload Photo</label>
            </div> %>

            <div class="group">
              <input id="nameInput" class="input" name="Name" required/>
              <span class="highlight"></span>
              <span class="bar"></span>
              <label for="Name" class="label">Name</label>
            </div>

            <div class="group">
             <input id="emailInput" class="input" name="Email" required/>
              <span class="highlight"></span>
              <span class="bar"></span>
               <label for="Email" class="label">Email</label>
            </div>

            <div class="group">
            <input id="dobInput" type="date" class="input" name="dob" required/>
              <span class="highlight"></span>
              <span class="bar"></span>
              <label for="dob" class='label'>Date of Birth</label>
            </div>

            <div class="group">
            <input type="password" id ="passwordInput" class="input" required />
              <span class="highlight"></span>
              <span class="bar"></span>
              <label for="password" class="label">Password</label>
            </div>

            <div class="group">
            <input type="password" class="input"  id ="confirmPassInput" name="password_confirmation" required />
              <span class="highlight"></span>
              <span class="bar"></span>
              <label for="password_confirmation" class="label">Confirm Password</label>
            </div>


            <div class="control-group">
              <label class="control-label" for="confirmsignup"></label>
              <div class="controls">
                <button id="confirmsignup" name="confirmsignup" class="btn btn-primary btn-block">Create Account</button>
              </div>
            </div>
          </fieldset>
       </div>
      </div>
    </div>
  </div>
  

</div>
</div>
</div>

<!--modal2 DELETE IF FORGOTTEN PASSWORD FUNCTIONALITY NOT ADDED-->

<div class="modal fade bs-modal-sm" id="forgot-password" tabindex="0" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
<div class="modal-dialog modal-sm">
<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Password will be sent to your email</h4>
  </div>
  <div class="modal-body">
    <form class="form-horizontal">
      <fieldset>
        <div class="group">
          <input required="" class="input" type="text">
          <span class="highlight"></span>
          <span class="bar"></span>
          <label class="label" for="date">Email address</label>
        </div>

        <div class="control-group">
          <label class="control-label" for="forpassword"></label>
          <div class="controls">
            <button id="forpassword" name="forpassword" class="btn btn-primary btn-block">Send</button>
          </div>
        </div>
      </fieldset>
    </form>

  </div>
</div>

</div>
</div>
