<h1> WELCOME TO ACEBOOK </h1>

<!-- Button trigger modal -->

<div class="container"> 
  <button class="btn btn-primary btn-lg" href="#signup" data-toggle="modal" data-target=".log-sign">Sign In/Register</button>
  </div>

<!-- Modal -->
<%# button %>
<div class="modal fade bs-modal-sm log-sign" id="myModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
<%# tabs %>
        <div class="bs-example bs-example-tabs">
            <ul id="myTab" class="nav nav-tabs">
              <li id="tab1" class=" active tab-style login-shadow "><a href="#signin" data-toggle="tab">Log In</a></li>
              <li id="tab2" class=" tab-style "><a href="#signup" data-toggle="tab">Sign Up</a></li>
              
            </ul>
        </div>
<%# modal content %>
      <div class="modal-body">
        <div id="myTabContent" class="tab-content">
        
          <!-- Sign In Form -->
        <div class="tab-pane fade active in" id="signin">
            <form class="form-horizontal">
            <fieldset>
            <%#  ---- log in form text input---- %>              
<div class="log-in-form">
  <%= form_with model: @user do |user| %>
    <div class="group"> <!-- Email input-->
      <%= user.label :email, 'Email address', class: 'label' %>
      <%= user.email_field :email, class: 'input', :required => true %><span class="highlight"></span><span class="bar"></span>
    </div>
    <div class="group"> <!-- Password input-->
      <%= user.label :password, 'Password', class: 'label' %>    
      <%= user.password_field :password, class: 'input', :required => true %><span class="highlight"></span><span class="bar"></span>
    </div>

    <%# ------ Forgotten password link ----- %>
           <div class="forgot-link">
            <a href="#forgot" data-toggle="modal" data-target="#forgot-password"> I forgot my password</a>
            </div>
    
      <!-- Log in Button -->
    <div class="control-group">
      <label class="control-label" for="signin"></label>
      <div class="controls">
        <%= user.submit "Log In", class: "btn btn-primary btn-block", id: "signin", name: "signin" %>   
      </div>
    </div>
  </div>        
      </fieldset>
    <% end %>
  </div>
          
          
        <div class="tab-pane fade" id="signup">
            <form class="form-horizontal">
            <fieldset>




